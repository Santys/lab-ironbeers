<div class="container">
  <div class="row">
        <img class="random-image col-md-4" src="{{image_url}}" alt="{{name}}"/>
        <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">
                        {{name}}
                    </h2>
                    <p class="card-text">
                        {{description}}
                    </p>
                    <p class="card-text">
                        {{tagline}}
                    </p>
                    <h3>Food pairing</h3>
                    <ul>
                        {{#each food_pairing}}
                            <li>{{this}}</li>
                        {{/each}}
                    </ul>
                    <h3>Brewers Tips</h3>
                    <p>{{brewers_tips}}</p>
                </div>
            </div>
        </div>
  </div>
</div>